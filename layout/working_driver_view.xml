<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/workingDPhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:src="@mipmap/customer"/>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workingDName"
            android:text="Dname"
            style="@style/txt_View_Style"/>
        <TextView
            android:text="DPhone No"
            android:id="@+id/workingDPhno"
            style="@style/txt_View_Style"/>

        <TextView
            android:text="CarNo"
            android:id="@+id/workingDCarno"
            style="@style/txt_View_Style"/>
        <TextView
            android:text="DCarType"
            android:id="@+id/workingDcarType"
            style="@style/txt_View_Style"/>

    </LinearLayout>


</LinearLayout>