<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/driverPhoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:src="@mipmap/customer"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/driverName"
                android:text="Dname"
                style="@style/txt_View_Style"/>
            <TextView
                android:text="DPhone No"
                android:id="@+id/driverPhone"
                style="@style/txt_View_Style"/>

            <TextView
                android:text="CarNo"
                android:id="@+id/driverCarNo"
                style="@style/txt_View_Style"/>
            <TextView
                android:text="DCarType"
                android:id="@+id/driverCarType"
                style="@style/txt_View_Style"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"

            android:padding="10dp">

            <Button
                android:id="@+id/btn_enable_diable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textAllCaps="false"/>
        </LinearLayout>

</LinearLayout>